{
  "name": "@bpm/repo-dashboard",
  "version": "0.1.0",
  "description": "Repository and package management dashboard with CLI and library API",
  "keywords": [
    "repo",
    "dashboard",
    "cli",
    "github",
    "packages",
    "management"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./github": {
      "types": "./dist/github.d.ts",
      "import": "./dist/github.js"
    },
    "./local": {
      "types": "./dist/local.d.ts",
      "import": "./dist/local.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "repo-dashboard": "./dist/bin/cli.js",
    "repo-dashboard-server": "./dist/bin/server.js"
  },
  "files": [
    "dist",
    "public",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cli && npm run build:web",
    "build:cli": "tsc -p tsconfig.build.json",
    "build:web": "vite build",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "tsx watch src/bin/server.ts",
    "dev:web": "vite",
    "preview": "vite preview",
    "start": "node dist/bin/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "prepack": "npm run build"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "express": "^4.18.0",
    "mermaid": "^11.12.0",
    "minimatch": "^10.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.3.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
