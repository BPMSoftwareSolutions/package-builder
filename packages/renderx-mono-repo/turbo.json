{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": [
    "**/.env",
    "**/.env.local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "cache": false
    },
    "test:coverage": {
      "outputs": [
        "coverage/**"
      ],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}

