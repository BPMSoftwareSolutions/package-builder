{
  "version": "1.0.0",
  "name": "RenderX Mono-Repo",
  "description": "Unified mono-repo consolidating all RenderX plugin packages with boundary enforcement and artifact generation",
  "organization": "BPMSoftwareSolutions",
  "repository": "package-builder",
  "repositoryUrl": "https://github.com/BPMSoftwareSolutions/package-builder",
  "license": "Apache-2.0",
  "type": "monorepo",
  "status": "active",
  "monoRepo": {
    "root": "packages/",
    "packageManager": "pnpm",
    "referenceImplementation": "renderx-plugins-demo",
    "contexts": [
      {
        "id": "conductor",
        "path": "packages/conductor",
        "scope": "conductor",
        "team": "orchestration-team",
        "enforces": ["no-ui-deps"],
        "description": "Orchestration engine for plugin coordination"
      },
      {
        "id": "sdk",
        "path": "packages/sdk",
        "scope": "sdk",
        "team": "sdk-team",
        "enforces": ["no-ui-deps"],
        "description": "Core SDK for plugin development"
      },
      {
        "id": "manifest-tools",
        "path": "packages/manifest-tools",
        "scope": "sdk",
        "team": "sdk-team",
        "enforces": ["no-ui-deps"],
        "description": "Tools for manifest generation and validation"
      },
      {
        "id": "host-sdk",
        "path": "packages/host-sdk",
        "scope": "sdk",
        "team": "sdk-team",
        "enforces": ["no-ui-deps"],
        "description": "Host application SDK"
      },
      {
        "id": "shell",
        "path": "packages/shell",
        "scope": "shell",
        "team": "shell-team",
        "enforces": ["only-public-interfaces"],
        "description": "Host application shell"
      },
      {
        "id": "contracts",
        "path": "packages/contracts",
        "scope": "contracts",
        "team": "architecture-team",
        "enforces": ["no-implementations"],
        "description": "Shared interfaces and contracts"
      },
      {
        "id": "tooling",
        "path": "packages/tooling",
        "scope": "tooling",
        "team": "architecture-team",
        "enforces": ["no-ui-deps"],
        "description": "Build tools and CLI utilities"
      },
      {
        "id": "plugins",
        "path": "packages/plugins",
        "scope": "plugin",
        "team": "plugin-teams",
        "enforces": ["no-shell-deps", "no-cross-plugin-deps"],
        "description": "Plugin implementations"
      }
    ]
  },
  "rules": {
    "dependencies": [
      { "from": "plugin-*", "to": "shell", "allowed": false, "reason": "Plugins cannot depend on shell" },
      { "from": "plugin-*", "to": "conductor", "allowed": true, "reason": "Plugins can use conductor" },
      { "from": "plugin-*", "to": "contracts", "allowed": true, "reason": "Plugins can use contracts" },
      { "from": "plugin-*", "to": "sdk", "allowed": true, "reason": "Plugins can use SDK" },
      { "from": "shell", "to": "conductor", "allowed": true, "reason": "Shell can use conductor" },
      { "from": "shell", "to": "contracts", "allowed": true, "reason": "Shell can use contracts" },
      { "from": "shell", "to": "sdk", "allowed": true, "reason": "Shell can use SDK" },
      { "from": "conductor", "to": "shell", "allowed": false, "reason": "Conductor cannot depend on UI" },
      { "from": "sdk", "to": "*", "allowed": false, "reason": "SDK has no external dependencies" }
    ],
    "lint": {
      "enforceModuleBoundaries": true,
      "checkDeepImports": true,
      "requireExports": true
    }
  },
  "artifacts": {
    "integrity": ".artifacts/artifacts.integrity.json",
    "manifests": [
      ".artifacts/interaction-manifest.json",
      ".artifacts/topics-manifest.json",
      ".artifacts/layout-manifest.json",
      ".artifacts/plugin-manifest.json"
    ],
    "catalogs": [
      ".artifacts/json-components/",
      ".artifacts/json-sequences/",
      ".artifacts/json-interactions/",
      ".artifacts/json-topics/"
    ]
  },
  "buildSystem": {
    "type": "turbo",
    "packageManager": "pnpm",
    "scripts": {
      "build": "turbo run build",
      "lint": "turbo run lint",
      "typecheck": "turbo run typecheck",
      "test": "turbo run test",
      "artifacts:build:integrity": "turbo run artifacts:build:integrity",
      "artifacts:validate": "turbo run artifacts:validate"
    }
  },
  "testing": {
    "unit": {
      "framework": "vitest",
      "coverage": "v8",
      "threshold": 80
    },
    "integration": {
      "framework": "vitest",
      "description": "Cross-package integration tests"
    }
  },
  "metrics": {
    "contextBoundaryViolations": 0,
    "buildGraphIntegrity": "pass",
    "packageConsistency": "synced",
    "workspaceValidation": "clean"
  }
}

