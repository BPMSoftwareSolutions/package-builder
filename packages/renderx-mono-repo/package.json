{
  "name": "@renderx/mono-repo",
  "version": "1.0.0",
  "description": "RenderX Mono-Repo - Unified development environment for all RenderX plugins with boundary enforcement",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "cypress run",
    "dev": "turbo run dev --parallel",
    "artifacts:build:integrity": "turbo run artifacts:build:integrity",
    "artifacts:validate": "turbo run artifacts:validate",
    "clean": "turbo run clean && rm -rf node_modules dist .turbo"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "cypress": "^15.5.0",
    "eslint": "^9.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.46.2",
    "vitest": "^3.0.0"
  },
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "musical-conductor": "^1.4.5"
  }
}
