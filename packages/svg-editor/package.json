{
  "name": "@bpm/svg-editor",
  "version": "0.1.0",
  "description": "Tiny SVG DOM manipulation helpers for UI",
  "keywords": [
    "svg",
    "dom",
    "ui"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
